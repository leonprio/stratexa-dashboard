rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla por defecto: Denegar todo acceso no autenticado
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Colección de Usuarios: Los usuarios pueden leer y escribir su propio perfil
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Permitir lectura a admins globales (necesita lógica de custom claims o lookup)
    }
    
    // Tableros: Solo lectura para autenticados, escritura controlada
    match /dashboards/{dashboardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Refinar esto luego basado en roles
    }
  }
}
